<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>ContactManager</display-name>

    <!-- Welcome pages -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Add Contact Servlet -->
    <servlet>
        <servlet-name>AddContactServlet</servlet-name>
        <servlet-class>servlets.AddContactServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddContactServlet</servlet-name>
        <url-pattern>/addContact</url-pattern>
    </servlet-mapping>

    <!-- List Contacts Servlet -->
    <servlet>
        <servlet-name>ListContactServlet</servlet-name>
        <servlet-class>servlets.ListContactServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ListContactServlet</servlet-name>
        <url-pattern>/listContacts</url-pattern>
    </servlet-mapping>

</web-app>
